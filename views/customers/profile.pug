extends ../layout
block content
    include ../includes/navbar
    .card.bg-dark(style=" padding:1rem;  border: 3px inset grey; width: 40%; margin: 3rem 1rem 2rem 1rem;")
        .card-body(style="color: lightgrey;")
            h2.card-title #{customer[0].Name} 
            h2 Card ID: #{customer[0].Card}, Card Points: #{customer[0].Points}
            br
            h3 City: #{customer[0].City}
            h3 Street: #{customer[0].Street} #{customer[0].Number_}, #{customer[0].Postal_code}
            h3 Phone: #{customer[0].Phone}
            h3 Pet: #{customer[0].Pet} 
            h3 Family members: #{customer[0].Family_members}