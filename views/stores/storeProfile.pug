extends ../layout
block content
    include ../includes/navbar
    script(src="../js/stores/storeTransactionsTable.js")
    script(type ='text/babel' src="../js/charts/storeSalesPerCategoryChart.js")
    .container-fluid
        .row
            .col
                .card.bg-dark(style="margin-top: 3rem; margin-left:2rem; padding:1rem; margin-bottom:1rem; border: 3px inset grey; width: 70%")
                    .card-body(style="color: lightgrey;")
                        h1 City:    #{store[0].City} 
                        h2 Street:  #{store[0].Street} #{store[0].Number_}
                        h4 Postal Code: #{store[0].Postal_code}
                        h4 Operating Hours: #{store[0].Operating_hours}
                        h4 Size : #{store[0].Size_} 
            .col(style="margin-right: 3rem; margin-top: 2rem;")
                h4(style="margin-bottom: 1rem; text-align: center;") Products sold per category
                #store_sales_per_category_chart
        .row
        h3(style="text-align:center; margin: 2rem 1rem 2rem 1rem; padding: 0.5rem;") Store Transactions
        .row    
            .col(style="margin: 2rem 1rem 2rem 1rem;") 
                label(for="pieces_slider") # of products:
                input#pieces_slider.js-range-slider(name="amount_slider" type="text" value="" style="width: 100%; margin: 2rem 1rem 2rem 1rem;")
            .col(style="margin: 2rem 1rem 2rem 1rem;")         
                label(for="amount_slider") Amount range:
                input#amount_slider.js-range-slider(name="amount_slider" type="text" value="" style="width: 100%; margin: 2rem 1rem 2rem 1rem;")
            .col(style="margin: 2rem 1rem 2rem 1rem;") 
                .btn-group.btn-group-toggle(data-toggle="buttons" id='radio_buttons')
                    label.btn.btn-primary.active(style="padding: 0.5rem; border-radius:15px; margin: 1rem 0.5rem 0rem 0.5rem;") Cash
                        input(type="radio" name="payment_method" value='Cash')
                    label.btn.btn-primary(style="padding: 0.5rem; border-radius:15px; margin: 1rem 0.5rem 0rem 0.5rem") Credit Card
                        input(type="radio" name="payment_method" value='Credit Card')
        .row
            .col
                table#storeTransactionsTable.table.table-bordered.table-light(style="margin: 2rem 2rem 2rem 0rem;")
                    thead.thead-dark 
                        tr  
                            th Customer Card
                            th Customer Name
                            th Date
                            th Total pieces
                            th Total Amount
                            th Payment Method
                    tbody
                        each trans in transactions
                            tr 
                                td#customer_card #{trans.Card}
                                td#customer_name #{trans.Name}
                                td#date_time #{trans.Date_time}
                                td#number_of_pieces #{trans.Total_piecies}
                                td#total_amount #{trans.Total_amount}
                                td#payment_method #{trans.Payment_method}
                                    

        